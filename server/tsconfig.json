{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom", // For loading `WebAssembly` type declaration.
      "es2020"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "out",
    "rootDir": "src",
    "paths": {
      "@ruby/prism/src/*": [
        "./node_modules/@ruby/prism/src/*",
        "./node_modules/@ruby/prism/types/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
