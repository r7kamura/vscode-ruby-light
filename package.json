{
  "name": "vscode-ruby-light",
  "displayName": "Ruby Light",
  "description": "Lightweight VSCode extension for Ruby.",
  "author": "r7kamura",
  "license": "MIT",
  "version": "0.6.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/r7kamura/vscode-ruby-light.git"
  },
  "extensionKind": [
    "workspace"
  ],
  "publisher": "r7kamura",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "title": "Ruby Light",
      "properties": {
        "rubyLight.diagnostics.enabled": {
          "type": "boolean",
          "description": "Enable diagnostics.",
          "default": true
        },
        "rubyLight.documentFormatting.enabled": {
          "type": "boolean",
          "description": "Enable document formatting and document range formatting.",
          "default": true
        },
        "rubyLight.documentHighlight.enabled": {
          "type": "boolean",
          "description": "Enable document highlight.",
          "default": true
        },
        "rubyLight.selectionRanges.enabled": {
          "type": "boolean",
          "description": "Enable selection ranges.",
          "default": true
        },
        "rubyLight.documentSymbol.enabled": {
          "type": "boolean",
          "description": "Enable document symbol.",
          "default": true
        }
      }
    },
    "languages": [
      {
        "id": "ruby",
        "aliases": [
          "Ruby",
          "rb"
        ],
        "extensions": [
          ".rb",
          ".arb",
          ".builder",
          ".cgi",
          ".fcgi",
          ".gemspec",
          ".god",
          ".irbrc",
          ".jbuilder",
          ".mspec",
          ".pluginspec",
          ".podspec",
          ".prawn",
          ".pryrc",
          ".rabl",
          ".rake",
          ".rbi",
          ".rbuild",
          ".rbw",
          ".rbx",
          ".rjs",
          ".ru",
          ".ruby",
          ".spec",
          ".thor",
          ".watchr"
        ],
        "filenames": [
          "appfile",
          "appraisals",
          "berksfile",
          "brewfile",
          "capfile",
          "dangerfile",
          "deliverfile",
          "fastfile",
          "gemfile",
          "guardfile",
          "podfile",
          "puppetfile",
          "rakefile",
          "snapfile",
          "thorfile",
          "vagrantfile"
        ],
        "firstLine": "^#!\\s*/.*\\b(ruby|rbx|rake)\\b",
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:tsc && npm run compile:prism",
    "compile:prism": "cp server/node_modules/@ruby/prism/src/prism.wasm server/out/prism.wasm",
    "compile:tsc": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:prettier": "prettier --write .",
    "lint:eslint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.13.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.2"
  }
}
